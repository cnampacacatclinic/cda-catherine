{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<section class="container-lg">
    <h2>Vos articles</h2>

    <div class="card">
        <div class="card-body row">
            <div class="col-md-6 text-right">
                <a class="btn btn-light" href="{{ path('app_insert_article') }}">Cr√©er un article</a>
            </div>
        </div>
    </div>
    
    <h3>Liste des ses propres articles</h3>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th scope="col" class="text-center">Date</th>
                <th scope="col" class="text-center">Titre</th>
                <th scope="col" class="text-center" colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articleData %}
                <tr>
                    {% if article.fkUser.id == app.user.id %}
                        <td>{{ article.dateARticle|date("d/m/Y") }}</td>
                        <td><a title="{{ article.titleArticle }}" href="{{ '/article?a=' }}{{ article.id }}">{{ article.titleArticle }}</a></td>
                        <td class="text-end">
                            <a href="{{ path('app_update_article', {'modif': article.id }) }}" class="btn btn-success">Modifier</a>
                        </td>
                        <td class="text-end">
                            {% if article.active == 1 %}
                                <a href="{{ path('app_admin', {'active': article.id }) }}" class="button btn btn-dark">Brouillon</a>
                            {% else %}
                                <a href="{{ path('app_admin', {'active': article.id }) }}" class="button btn btn-primary">Publier</a>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <a data-article-id="{{ article.id }}" data-bs-toggle="modal" data-bs-target="#myModal" class="btn btn-danger supp" href="{{ path('app_admin', {'supp': article.id }) }}">Supprimer</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}