{% extends 'base.html.twig' %}

{% block title %}Management Other People's Content{% endblock %}

{% block body %}
<section class="container-lg">
    <h2>Liste des articles des autres utilisateurs</h2>
        
        <table class="table table-responsive  table-hover">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Date</th>
                    <th scope="col" class="text-center">Titre</th>
                    <th scope="col" class="text-center" colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articleData %}
                    {% if article.fkUser.id != app.user.id %}
                    <tr>
                        <td>{{ article.dateARticle|date("d/m/Y") }}</td>
                        <td><a title="{{ article.titleArticle }}" href="{{ '/article?a=' }}{{ article.id }}">{{ article.titleArticle }}</a></td>
                        <td class="text-end">
                            <a href="{{ path('app_update_article', {'modif': article.id }) }}" class="btn btn-success">Modifier</a>
                        </td>
                        <td class="text-end">
                            {% if article.active == 1 %}
                                <a href="{{ '?active=' }}{{ article.id }}" class="btn btn-dark">Brouillon</a>
                            {% else %}
                                <a href="{{ '?active=' }}{{ article.id }}" class="btn btn-primary">Publier</a>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <a data-article-id="{{ article.id }}" data-bs-toggle="modal" data-bs-target="#myModal" class="btn btn-danger supp" href="{{ '?supp=' }}{{ article.id }}">Supprimer</a>
                        </td>
                    </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
</section>
{% endblock %}
