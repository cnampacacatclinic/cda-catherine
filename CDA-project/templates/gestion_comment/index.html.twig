{% extends 'base.html.twig' %}

{% block title %}Hello GestionCommentController!{% endblock %}

{% block body %}
<section>
    <h3>Gestion des commentaires</h3>
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Date</th>
                    <th scope="col" class="text-center">Utilisateur</th>
                    <th scope="col" class="text-center">Texte</th>
                    <th scope="col" class="text-center" colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                {% for comment in comments %}
                    <td>{{ comment.dateComment|date("d/m/Y") }}</td>
                    <td>
                        {% for user in users %}
                            {% if comment.fkUser.id == user.id %}
                                {{ user.firstName }} {{ user.lastName }}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td class="text-end">
                        {% if comment.active == 1 %}
                            <a href="{{ path('app_gestion_comment', {'active': comment.id }) }}" class="btn btn-dark">Ne pas valider</a>
                        {% else %}
                            <a href="{{ path('app_gestion_comment', {'active': comment.id }) }}" class="btn btn-primary">Valider</a>
                        {% endif %}
                    </td>
                    <td class="text-end">
                        <a href="{{ path('app_gestion_comment', {'supp': comment.id }) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}
