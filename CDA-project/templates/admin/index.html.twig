{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<section class="container-lg">
    <h2>Vos articles</h2>

    <div class="card">
        <div class="card-body row">
            <div class="col-md-6 text-right">
                <a class="btn btn-light" href="{{ path('app_insert_article') }}">Créer un article</a>
            </div>
        </div>
    </div>
    
    <h3>Liste des ses propres articles</h3>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th scope="col" class="text-center">Date</th>
                <th scope="col" class="text-center">Titre</th>
                <th scope="col" class="text-center" colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articleData %}
                <tr>
                    {% if article.fkUser.id == app.user.id %}
                        <td>{{ article.dateARticle|date("d/m/Y") }}</td>
                        <td><a title="{{ article.titleArticle }}" href="{{ '/article?a=' }}{{ article.id }}">{{ article.titleArticle }}</a></td>
                        <td class="text-end">
                            <a href="{{ path('app_update_article', {'modif': article.id }) }}" class="btn btn-success">Modifier</a>
                        </td>
                        <td class="text-end">
                            {% if article.active == 1 %}
                                <a href="{{ path('app_admin', {'active': article.id }) }}" class="button btn btn-dark">Brouillon</a>
                            {% else %}
                                <a href="{{ path('app_admin', {'active': article.id }) }}" class="button btn btn-primary">Publier</a>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <a data-article-id="{{ article.id }}" data-bs-toggle="modal" data-bs-target="#myModal" href="{{ path('app_admin', {'supp': article.id }) }}" class="btn btn-danger supp">Supprimer</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Modale de confirmation Bootstrap -->
    <div class="modal fade" id="myModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmation de suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer cet élément ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Supprimer</button>
                    
                </div>
            </div>
        </div>
    </div>

</section>
