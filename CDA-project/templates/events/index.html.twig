{% extends 'base.html.twig' %}
{% block title %}Events{% endblock %}
{% block body %}
<section>
    {% for page in pageData %}
        <h2>{{ page.titlePage }}</h2>
    {% endfor %}
    
    {% for event in eventData %}
        <h3>{{ event.titleEvent }}</h3>
        <p>Date de début  : {{ event.startDate|date("d/m/Y") }}</p>
        <p>Date de fin : {{ event.endDate|date("d/m/Y") }}</p>
        <p>Lieu de l'événement : {{ event.locationEvent|raw }}</p>
        <p>{{ event.descriptionEvent|striptags|slice(0, 300)}} etc..</p>
        <p><a href="{{ path('app_event_page', {'e': event.id}) }}">Lire la suite</a></p>
    {% endfor %}
</section>
{% endblock %}